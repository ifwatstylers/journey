@model journey.Models.ContestModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Drive &amp; Win Contest</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/Content/css-contest/opensans-font.css">
    <link rel="stylesheet" type="text/css" href="~/Content/fonts-contest/line-awesome/css/line-awesome.min.css">
    <!-- Jquery -->
    <link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/Content/css-contest/style.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#CheckInput").click(function () {
                var checkEmail = document.forms['contestform'].jsEmail.value;
                var checkIC = document.forms['contestform'].jsIC.value;
                

                if (/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(checkEmail)) {
                    return (true)
                }
                alert("You have entered an invalid email address!")
                return (false)

                if (checkIC == null || checkIC == "") {
                    alert("Please Keyin your IC!")
                    return false;
                }

            });

        });
    </script>
</head>
<body class="form-v4">
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
<div class="page-content">
    <div class="form-v4-content">
        <div class="form-left">
            <h2>TRAVEL & WIN 1 MILLION PLUSMiles POINTS</h2>
            <p class="text-1">
                Register to participate in the Travel &amp; Win 1 Million PLUSMiles Points
            </p>
            <p class="text-2">
                To participate this contest, you have to be a PLUSMiles Member. If you already a member, kindly fill in the “Contest Registration Form”
                After submitting the contest registration form:
                <ol>
                    <li>Post your creative picture at Instagram account according to the given theme</li>
                    <li>Create a creative caption on your post with #travelwithPLUSMiles</li>
                    <li>Tag &#x40;plus_malaysia Instagram</li>
                    <li>Kindly refer Terms and Conditions for more info</li>
                </ol>
            </p>
            <p class="text-3"><span>Not yet a member?</span></p>
            <div class="form-left-last">
                <a href="https://plusmiles.com.my/landing" target="_blank"><input type="submit" name="account" class="account" value="Create An Account"></a>
            </div>
        </div>
            <form class="form-detail" method="POST" id="contestform">
                <h2>CONTEST REGISTRATION FORM</h2>
                <div class="form-row">
                    <label for="first_name">Name</label>
                    @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", @class = "form-input" })
                </div>
                <div class="form-group">
                    <div class="form-row form-row-1">
                        <label for="last_name">Phone No</label>
                        @Html.TextBoxFor(m => m.PhoneNo, new { placeholder = "Phone No.", @class = "form-input" })
                    </div>
                    <div class="form-row form-row-1">
                        <label for="last_name">IC No</label>
                        @Html.TextBoxFor(m => m.IC, new { placeholder = "890101-01-2001", id = "jsIC", @class = "form-input" })
                    </div>
                </div>
                <div class="form-row">
                    <label for="your_email">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", id = "jsEmail", @class = "form-input" })
                </div>
                <div>
                    <label class="container">
                        <p>By clicking Submit, You agree to our <a href="#" class="text">Terms and Conditions</a></p>
                        @*<input type="checkbox" name="checkbox">*@
                        @*<span class="checkmark"></span>*@
                    </label>
                </div>
                <div class="form-row-last">
                    <input type="submit" name="register" class="register" value="Submit" id="CheckInput">

                </div>
            </form>
        </div>
</div>
<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
