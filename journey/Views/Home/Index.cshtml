        $(document).ready(function () {
            $("#hide").click(function () {
                var jsfrom = document.forms['ifwatForm'].jsFrom.value;
                var jsto = document.forms['ifwatForm'].jsTo.value;
                var jsdate = document.forms['ifwatForm'].jsDate.value;

                var SBorNB = jsfrom - jsto;
                if (SBorNB == 1 || SBorNB == -1) {
                    $("#jsTime1").show();
                    $("#jsTime2").hide();
                    $("#jsTime3").hide();
                    $("#jsTime4").hide();
                }
                else if (SBorNB == 2 || SBorNB == -2) {
                    $("#jsTime1").hide();
                    $("#jsTime2").show();
                    $("#jsTime3").hide();
                    $("#jsTime4").hide();
                }
                else if (SBorNB == 3 || SBorNB == -3) {
                    $("#jsTime1").hide();
                    $("#jsTime2").hide();
                    $("#jsTime3").show();
                    $("#jsTime4").hide();
                }
                else {
                    $("#jsTime1").hide();
                    $("#jsTime2").hide();
                    $("#jsTime3").hide();
                    $("#jsTime4").show();
                }

                if (jsfrom == null || jsfrom == "" || jsto == null || jsto == "" || jsdate == null || jsdate == "") {
                    alert("Please fill all required field");
                    return false;
                }
                else {
                    $("#MainDiv").hide();
                    $("#SecondDiv").show();
                }
            });
            $("#back").click(function () {
                $("#MainDiv").show();
                $("#SecondDiv").hide();
            });
            $("#hideAgain").click(function () {
                //if (document.forms['ifwatForm'].jsTime.value == null) {
                //    document.forms['ifwatForm'].jsTime.value
