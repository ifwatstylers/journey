                //if (jstime == null || jstime == "") {
                //    alert("Please select all required field");
                //    return false;
                //}
                $("#MainDiv").hide();
                $("#SecondDiv").hide();
                $("#ThirdDiv").show();
            });
            $("#show").click(function () {
                $("#MainDiv").show();
                $("#SecondDiv").hide();
            });
        });
    </script>
